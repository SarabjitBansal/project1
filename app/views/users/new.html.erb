<h1>Sign Up</h1>

<% if @user.errors.any?  %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg.capitalize %></li>
    <% end %>
  </ol>
  <!-- <h1>You Screwed something, you dumb terminal</h1> -->
<% end %>

<%= form_for @user do |f| %>
<div class = "formlog">
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <label></label>

<%= f.submit "Sign up!" , :class => "btnlogin" %>
  </div>

<% end %>
